    <EditText
        android:id="@+id/userMessageNewGroupChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="@string/enter_your_message_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonSendNewGroupChat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewPrivateChat" />

    <Button
        android:id="@+id/buttonSendNewGroupChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_corner"
        android:text="@string/buttonSendChatlog"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userMessageNewGroupChat"
        app:layout_constraintTop_toTopOf="@+id/userMessageNewGroupChat" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewNewGroupChat"
        android:layout_width="368dp"
        android:layout_height="449dp"
        android:layout_marginBottom="8dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/userMessageNewGroupChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



